<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Dialog"
    activeTab="{Long}0"
    title="Checkbox Component Without Text"
    xtype="tabpanel">
    <items jcr:primaryType="cq:WidgetCollection">
        <tab1
            jcr:primaryType="cq:Widget"
            hideMode="offsets"
            title="Checkbox Component Tab"
            xtype="panel">
            <items jcr:primaryType="cq:WidgetCollection">
                <checkbox
                    jcr:primaryType="cq:Widget"
                    defaultValue="no"
                    fieldLabel="Checkbox"
                    name="./checkbox"
                    type="checkbox"
                    xtype="selection">
                    <options jcr:primaryType="cq:WidgetCollection">
                        <optionone
                            jcr:primaryType="nt:unstructured"
                            text="Option 1"
                            value="option_one"/>
                        <optiontwo
                            jcr:primaryType="nt:unstructured"
                            text="Option 2"
                            value="option_two"/>
                    </options>
                </checkbox>
            </items>
        </tab1>
    </items>
</jcr:root>
